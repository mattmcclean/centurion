<%= simple_form_for @checkresult, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Checkresult</legend>

    <%= f.input :service %>
    <%= f.input :checked_at %>
    <%= f.association :returncode %>
    <%= f.association :check %>
    <%= f.association :node %>
    <%= f.input :info %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', checkresults_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
