<%= simple_form_for @alert, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Alert</legend>

    <%= f.association :alertstatus %>
    <%= f.association :checkresult %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', alerts_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
