<%= simple_form_for @check, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Check</legend>

    <%= f.input :name %>
    <%= f.input :cmd %>
    <%= f.input :target %>
    <%= f.input :interval %>
    <%= f.input :desc %>
    <%= f.association :subscriptions, as: :check_boxes %>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', checks_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
