<h1>Subscriptions</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.id %></td>
        <td><%= link_to subscription.name, subscription_path(subscription) %></td>
        <td><%= subscription.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_subscription_path(subscription), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', subscription_path(subscription), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_subscription_path, :class => 'btn btn-primary' %>
